{
  "name": "@hospital-tasks/api",
  "version": "1.0.0",
  "description": "API server with Bun and Hono.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
